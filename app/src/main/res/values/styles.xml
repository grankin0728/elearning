<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <!--<item name="android:drawablePadding">@dimen/dimen_05x</item>-->
        <item name="android:minWidth">20dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Edit text -->
    <style name="EditTextBase" parent="@android:style/Widget.EditText">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- EditText themes -->
    <style name="EditTextNormal" parent="@style/EditTextBase">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="EditTextError" parent="@style/EditTextBase">
        <!-- Custom EditText -->
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/red</item>
    </style>

    <style name="EditTextGrey" parent="@android:style/Widget.EditText">
        <!-- Custom EditText -->
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="colorControlHighlight">@color/light_grey</item>
    </style>

    <!-- button -->
    <style name="ButtonTextPrimary">
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Custom Ratingbar -->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar</item>
        <item name="android:minHeight">@dimen/dimen_3x</item>
        <item name="android:maxHeight">@dimen/dimen_3x</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>
    <!--  -->
    <style name="NavigationViewItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_2x</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dimen_2x</item>
        <item name="android:paddingTop">@dimen/dimen_2x</item>
        <item name="android:paddingRight">@dimen/dimen_1x</item>
        <item name="android:paddingBottom">@dimen/dimen_2x</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavigationViewButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/dimen_2x</item>
        <item name="android:paddingLeft">@dimen/dimen_2x</item>
        <item name="android:paddingTop">@dimen/dimen_2x</item>
        <item name="android:paddingRight">@dimen/dimen_1x</item>
        <item name="android:paddingBottom">@dimen/dimen_2x</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextViewLongAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dimen_1x</item>
        <item name="android:background">@drawable/bg_txt_question_troke_radius</item>
        <item name="android:padding">@dimen/dimen_1x</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextViewShortAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dimen_1x</item>
        <item name="android:background">@drawable/bg_txt_question_troke_radius</item>
        <item name="android:padding">@dimen/dimen_1x</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">1</item>
    </style>



</resources>
