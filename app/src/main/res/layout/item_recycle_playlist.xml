<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/detail_background">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_playlist"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txt_title_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_x1x"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/whitetext"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_05x"
        android:layout_toRightOf="@+id/img"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/imgplaying"
            android:layout_width="@dimen/dimen_2x"
            android:layout_height="@dimen/dimen_2x"
            android:layout_marginStart="@dimen/dimen_x1x"
            android:scaleType="fitXY"
            android:src="@drawable/ic_headset"
            android:layout_marginLeft="@dimen/dimen_x1x" />

        <TextView
            android:id="@+id/txtplaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playing"
            android:textColor="@color/whitetext"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/whitetext"
        android:layout_alignParentLeft="true" />
</RelativeLayout>