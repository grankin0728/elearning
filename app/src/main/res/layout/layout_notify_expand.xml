<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationbg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_lesson"
        android:layout_width="@dimen/notification_expanded_height"
        android:layout_height="@dimen/notification_expanded_height"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_lessontitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_row_height"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen_2x"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_xnormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@color/divider"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_notify_effect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_black_prev" />

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_notify_effect"
                android:scaleType="centerInside"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/ic_black_play" />

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_notify_effect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_black_next" />

            <LinearLayout
                android:layout_width="@dimen/divider_size"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_x1x"
                android:layout_marginTop="@dimen/dimen_x1x"
                android:background="@color/divider" />

            <ImageView
                android:id="@id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/btn_notify_effect"
                android:scaleType="centerInside"
                android:src="@drawable/ic_black_close" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>